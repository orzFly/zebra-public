    "fix": "invoke pipeline fix",
    "lint": "invoke pipeline lint",
    "watch": "invoke pipeline watch"
  },
  "dependencies": {
    "@orz/assert-factory": "^1.0.0",
    "@orz/marline": "^1.0.0",
    "@yarnpkg/fslib": "^2.0.0-rc.14",
    "@yarnpkg/libzip": "^2.0.0-rc.9",
    "@yarnpkg/shell": "^2.0.0-rc.6",
    "chalk": "^3.0.0",
    "clipanion": "^2.1.6",
    "globby": "^11.0.0",
    "lazy-get-decorator": "^2.2.0",
    "p-queue": "^6.2.1",
    "rimraf": "^3.0.1",
    "typed-emitter": "^0.2.0"
  },
  "devDependencies": {
    "@types/globby": "^9.1.0",
    "@types/node": "^13.13.1",
    "@types/rimraf": "^2.0.3",
    "@zeit/ncc": "^0.21.0"
  },
  "invoke/pipeline": {
    "typescript": {
      "build": "tsc",
      "watch": "tsc --watch --preserveWatchOutput",
      "clean": "rimraf lib",
      "lint": "tslint --project tsconfig.json --config tslint.json"
    },
    "bundle": {
      "$requires": "typescript",
      "clean": "rimraf dist-dev",
      "dev": "ncc build lib -o dist-dev -w",
      "dist": "ncc build lib -o dist"
    }
  }
