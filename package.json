{
  "name": "@local-workspace/root",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/@*/*",
    "packages/*",
    ".local/*"
  ],
  "scripts": {
    "all:build": "lerna run build --include-dependencies --stream --concurrency 4",
    "all:clean": "lerna run clean --include-dependencies --stream --concurrency 4 --no-sort",
    "all:cleanbuild": "run-s \"all:clean {@}\" \"all:build {@}\" --",
    "all:cleanwatch": "run-s \"all:clean {@}\" \"all:build {@}\" \"all:watch {@}\" --",
    "all:lint": "lerna run lint --include-dependencies --stream --concurrency 4",
    "all:watch": "lerna run watch --include-dependencies --stream --parallel",
    "berry": "env --unset=YARN_WRAP_OUTPUT YARN_IGNORE_PATH=1 node .yarn/releases/yarn-sources.js",
    "constraints": "yarn berry constraints",
    "fix": "run-s -n fix-*",
    "fix-constraints": "yarn constraints --fix",
    "fix-package.json": "sort-package-json package.json packages/*/package.json packages/@*/*/package.json .local/*/package.json",
    "fix-yarn.lock": "yarn-deduplicate yarn.lock",
    "lint": "run-s -n lint-*",
    "lint-constraints": "yarn constraints",
    "lint-package.json": "yarn fix-package.json --check",
    "lint-yarn.lock": "yarn-deduplicate --list yarn.lock"
  },
  "devDependencies": {
    "@orz/tslint-rules": "^1.0.0",
    "@orz/typescript": "^1.0.0",
    "@types/bluebird": "^3.5.27",
    "@types/emscripten": "^1.39.0",
    "@types/rimraf": "2.0.3",
    "lerna": "^3.5.0",
    "rimraf": "^3.0.0",
    "sort-package-json": "^1.31.0",
    "yarn-deduplicate": "^1.1.1"
  },
  "orz": {
    "builder": false
  }
}
